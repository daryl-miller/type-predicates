{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "cdk.out",
  ],
  "include": [
    "debug/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.js",
    "tests/**/*.ts",
    "scripts/**/*.ts",
    "stack/**/*.ts",
    "webpack.config.js",
    "test_harness/**/*.ts",
    "smoke-testing/**/*.ts"
  ],
}